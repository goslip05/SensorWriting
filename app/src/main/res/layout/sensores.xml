<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCAAA4">

    <Button
        android:id="@+id/btn4"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:onClick="mostrarDatosMagnetometro"
        android:text="Magnetómetro"
        android:textSize="17sp"
        app:fontFamily="@font/boogaloo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:onClick="mostrarDatosProximidad"
        android:text="Proximidad"
        android:textSize="20sp"
        app:fontFamily="@font/boogaloo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:onClick="mostrarDatosAcelerometro"
        android:text="Acelerómetro"
        android:textSize="18sp"
        app:fontFamily="@font/boogaloo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:onClick="mostrarDatosGiroscopio"
        android:text="Giróscopio"
        android:textSize="20sp"
        app:fontFamily="@font/boogaloo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:onClick="mostrarDatosGps"
        android:text="GPS"
        android:textSize="20sp"
        app:fontFamily="@font/boogaloo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>